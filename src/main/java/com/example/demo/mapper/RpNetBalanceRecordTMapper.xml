<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace属性值与接口全限定名对应 -->
<mapper namespace="com.example.demo.mapper.RpNetBalanceRecordTMapper">
    <!-- select元素表示定义一个查询语句，
            id属性值与接口中的方法名对应，
            resultType属性值指定实体类的全限定名
            parameterType属性值指定参数类型的全限定名-->
    <select id="selectByInfo" parameterType="com.example.demo.entity.RpNetBalanceRecordT"
            resultType="com.example.demo.entity.RpNetBalanceRecordT">
        SELECT id,city_code,product_code,balance_month,balance_sp_code,balance_type_code,
        record_operator,balance_fee
        FROM rp_net_balance_record_t
        <where>
            <!-- 对于字符串来说既要判断null，也要判断空字符串 -->
            <!-- 在test属性中和＃{}中使用的是实体类（参数）中的数据域，不在这里的指的是表中的列名。 -->
            <if test="cityCode != null and cityCode != '' ">
                AND city_code=#{cityCode}
            </if>
            <if test="productCode != null and productCode != ''">
                AND product_code LIKE #{productCode}
            </if>
            <if test="balanceSpCode != null and balanceSpCode != ''">
                AND balance_sp_code LIKE #{balanceSpCode}
            </if>
            <if test="balanceTypeCode != null and balanceTypeCode != ''">
                AND balance_type_code LIKE #{balanceTypeCode}
            </if>
            <if test="balanceMonth!= null">
                AND TO_CHAR(balance_month,'YYYYMM')=TO_CHAR(#{balanceMonth},'YYYYMM')
            </if>
        </where>
    </select>
</mapper>